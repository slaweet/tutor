
to circle :r :k
  fd 3.14*:r / :k
  rt 360/:k
  repeat :k - 1 [
     fd 2*3.14*:r / :k
     rt 360/:k
  ]
  fd 3.14*:r / :k
end

to centeredcircle :r :k
  pu fd :r rt 90 pd
  circle :r 30
  pu lt 90 bk :r pd
end

to flowerpart :n :r
  centeredcircle :r :k
  if :n > 1 [
    repeat 2 [
      pu fd :r pd
      flowerpart (:n - 1) :r
      pu bk :r pd
      rt 60
    ]
    lt 120
  ] 
end

to flower :n :k
  centeredcircle :r :k
  repeat 6 [ 
      pu fd :r pd
      flowerpart (:n - 1) :r
      pu bk :r pd
      rt 60
  ]
end

home
clean 
flower 4 50