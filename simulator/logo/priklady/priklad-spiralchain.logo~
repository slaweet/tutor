
to spiralR :n :k
 fd :n * :k
 if :n > 1 [
   rt 90
   spiralR (:n-1) :k
 ]
end

to spiralL :n :k :m
 fd :n * :k
 if :n < :m [
   lt 90
   spiralL (:n+1) :k :m
 ]
end

to spiralblock :n :k
  fd :n * :k
  rt 90
  spiralR :n :k
  rt 90
  fd :k
  lt 90
  spiralL 1 :k :n 
  lt 90
end


home
clean
repeat 5 [
spiralblock 6 15
]
