
to polystarbranch :iter :n :l
  if :iter > 0 [
    lt (90 - 180/:n + 15)
    repeat :n-1 [
    fd :l
    lt (90 - 180/:n)
    polystarbranch (:iter - 1) :n (:l/1.6)
    rt (90 - 180/:n  + 360/:n)
    ]
    fd :l
    rt (90 - 180/:n + 15)
    rt 360/:n 
  ]
end

to polystar :iter :n :l
  polystarbranch :iter :n :l
  rt 180
  lt 15
  polystarbranch (:iter - 1) :n (:l/1.6) 
end

